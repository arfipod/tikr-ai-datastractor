{
  "manifest_version": 3,
  "name": "TIKR-AI Scraper",
  "version": "0.1.0",
  "description": "Scrape TIKR financial tables to Markdown (side panel).",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage",
    "sidePanel",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://app.tikr.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open TIKR-AI"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
